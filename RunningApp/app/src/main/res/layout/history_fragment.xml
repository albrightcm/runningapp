<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/past_locations_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/text_margin"
        android:textIsSelectable="true"
        android:textSize="@dimen/past_locations_text_size"
        android:text="@string/past_runs" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/past_runs"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:text="Distance (Mi)" />

    <TextView
        android:id="@+id/distance_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="25dp"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/black"
        android:text="Avg Pace (Mi/Min)" />

    <TextView
        android:id="@+id/pace_history"
        android:layout_width="match_parent"
        android:layout_marginBottom="6dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:text="Calories Burned" />

    <TextView
        android:id="@+id/calories_history"
        android:layout_width="match_parent"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="25dp"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:text="TextView" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/black"
        android:text="Total Time" />

    <TextView
        android:id="@+id/time_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:textSize="13dp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/black"
        android:text="TextView" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/black"
        android:text="Min Speed (Mph)" />

    <TextView
        android:id="@+id/min_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:textSize="13dp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/black"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/black"
        android:text="Max Speed (Mph)" />

    <TextView
        android:id="@+id/max_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="6dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/black"
        android:text="Avg Speed (Mph)" />

    <TextView
        android:id="@+id/avg_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="6dp"
        android:textColor="@color/black"
        android:text="TextView" />

</LinearLayout>